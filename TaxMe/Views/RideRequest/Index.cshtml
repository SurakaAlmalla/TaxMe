@{
}
@model IEnumerable<TaxMeData.Models.RideRequest> // Adjust the namespace accordingly

@{
    ViewBag.Title = "Ride Requests";
}

<h1>Ride Requests</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Request a Ride</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pickup Location</th>
            <th>Dropoff Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rideRequest in Model)
        {
            <tr>
                <td>@rideRequest.Id</td>
                <td>@rideRequest.PickupLocation</td>
                <td>@rideRequest.DropoffLocation</td>
                <td>
                    <a href="@Url.Action("Details", new { id = rideRequest.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", new { id = rideRequest.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = rideRequest.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

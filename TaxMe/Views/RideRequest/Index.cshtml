@model IEnumerable<TaxMeData.Models.RideRequest> 

@{
    ViewBag.Title = "Ride Requests";
}

<h1>Ride Requests</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Request a Ride</a>
</p>
<div class="row justify-content-center align-items-center mt-5 " >
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8"> <input type="text" name="userId" placeholder="Search By UserId" /></div>
        <div class="col-4"><input type="submit" value="Search" class="btn btn-success"/></div>
    </form>
</div>
 

@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pickup Location</th>
            <th>Dropoff Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rideRequest in Model)
        {
            <tr>
                <td>@rideRequest.IdReq</td>
                <td>@rideRequest.PickupLocation</td>
                <td>@rideRequest.DropoffLocation</td>
                <td>
                    <a href="@Url.Action("Details", new { id = rideRequest.IdReq })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", new { id = rideRequest.IdReq })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = rideRequest.IdReq })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else {
<div class="mt-5 allert alert-warning">
    <h3>there is no riderequest</h3>
</div>
}